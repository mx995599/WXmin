/* pages/search/search.wxss *//* pages/search/search.wxss */
.header{
  background: #fff;
  margin-bottom: 30rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border: 1px solid #E8E8E8;
}
.search{
  height: 60rpx;
  line-height: 60rpx;
  background: #e7e7e7;
  border-radius: 20rpx;
  margin: 20rpx;
}
.search input {
  font-size: 28rpx;
  color: #acacac;
  width: 100%;
  height: 100%;
  padding-left: 20rpx;
}
.song-list{
  display: flex;
  margin: 0 30rpx;
  padding: 10rpx 0rpx;
  height: 90rpx;
  border-bottom: 1px solid #F5F5F5;
}
.song-detail{
  display: flex;
}
.num{
  flex: 1;
  text-align: center;
  line-height: 90rpx;
}
.song-detail{
  flex: 7;
}
.xia{
  flex: 1;
  text-align: center;
  line-height: 90rpx;
  margin-left: 25rpx;
  color: #999;
}

.song-img image{
  width: 15rpx;
  height: 15rpx;
  margin-right: 20rpx;
  margin-top: 35rpx;
}

.song-name{
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  width: 500rpx;
  color: #414141;
  margin: 8rpx 0;
}
.song-desc{
  color: #999;
}
.his{
  margin-left: 35rpx;
}
.list{
  margin: 0 30rpx;
  height: 55rpx;
  color: #999;
  margin-top: 25rpx;
  border-bottom: 1px solid #CCE4F7;
}


